<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{ISO8601}] ratpack-demo %-5level [%thread] %logger{15} - %msg%n
            </pattern>
        </encoder>
    </appender>


    <logger name="com.github.phillbarber" level="debug" />

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
